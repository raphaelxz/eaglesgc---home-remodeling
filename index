    <script>
    window.addEventListener('scroll', function () {
        const hero = document.querySelector('.hero');
        const scrollY = window.scrollY;
        
        // Dynamically adjust background position, keep it within safe view bounds
        const offset = Math.min(scrollY * 0.5, window.innerHeight); // Cap the scroll effect to the viewport height
        hero.style.backgroundPosition = `center calc(50% + ${offset}px)`; // Background stays centered dynamically
    });
    </script>

    
    

    
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        const swiper = new Swiper('.swiper-container', {
            slidesPerView: 2.5,
            spaceBetween: 0,
            centeredSlides: true,
            loop: true,
            autoplay: {         // Enable autoplay functionality
                delay: 3000,    // Delay between slides (in ms)
                disableOnInteraction: false, // Continue autoplay after user interaction
            },
        });
        
        // Scroll reveal function
        const revealElements = document.querySelectorAll('.reveal');

        const revealOnScroll = () => {
            const windowHeight = window.innerHeight;
            revealElements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                if(elementTop < windowHeight - 150) {
                    element.classList.add('visible');
                } else {
                    element.classList.remove('visible');
                }
            });
        };

        window.addEventListener('scroll', revealOnScroll);
        window.addEventListener('resize', revealOnScroll);
        window.addEventListener('DOMContentLoaded', revealOnScroll);
    </script>
    <script>// Select all gallery images
        // Select all gallery images
        const galleryImages = document.querySelectorAll('.swiper-slide img');

        // Lightbox elements
        const lightbox = document.getElementById('lightbox'); 
        const lightboxImage = document.querySelector('.lightbox-image'); 
        const lightboxClose = document.querySelector('.lightbox-close'); 
        const lightboxPrev = document.querySelector('.lightbox-prev'); 
        const lightboxNext = document.querySelector('.lightbox-next'); 

        // Track the current index
        let currentIndex = 0; 

        // Function to update the lightbox content
        const updateLightbox = () => {
            // Apply 'exiting' class for smooth out animation
            lightboxImage.classList.add('exiting');
            
            // After animation, change the image
            setTimeout(() => {
                lightboxImage.src = galleryImages[currentIndex].src;
                lightboxImage.alt = galleryImages[currentIndex].alt;

                // Remove old animation and start entering animation
                lightboxImage.classList.remove('exiting');
                lightboxImage.classList.add('entering');

                // Clean up entering animation after it's done
                setTimeout(() => lightboxImage.classList.remove('entering'), 150); 
            }, 150); 
        };

        // Open lightbox when clicking an image
        galleryImages.forEach((img, index) => {
            img.addEventListener('click', () => {
                currentIndex = index; // Save the clicked image index
                updateLightbox(); // Update and display the lightbox content
                lightbox.style.display = 'flex';
            });
        });

        // Close the lightbox
        lightboxClose.addEventListener('click', () => {
            lightbox.style.display = 'none';
        });

        lightbox.addEventListener('click', (event) => {
            if (event.target === lightbox) {
                lightbox.style.display = 'none';
            }
        });

        // Navigation buttons
        lightboxPrev.addEventListener('click', () => {
            currentIndex = (currentIndex - 1 + galleryImages.length) % galleryImages.length; 
            updateLightbox();
        });

        lightboxNext.addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % galleryImages.length; 
            updateLightbox();
        });

    </script>






    <!-- Aquí cargas JavaScript -->
    <script>
        // Selecciona todos los elementos FAQ
        const faqItems = document.querySelectorAll('.faq-item');

        // Función para revelar elementos al hacer scroll
        const revealFAQs = () => {
            const windowHeight = window.innerHeight;

            faqItems.forEach((item) => {
                const elementTop = item.getBoundingClientRect().top;

                // Si el elemento está dentro del viewport, añade 'visible'
                if (elementTop < windowHeight - 100) {
                    item.classList.add('visible');
                } else {
                    // Si sale del viewport, remueve la clase (opcional)
                    item.classList.remove('visible');
                }
            });
        };

        // Agregar eventos de scroll y DOMContentLoaded
        window.addEventListener('scroll', revealFAQs);
        window.addEventListener('DOMContentLoaded', revealFAQs);
    </script>
    <script>// Select all gallery images
        const galleryImages = document.querySelectorAll('.swiper-slide img');

        // Lightbox elements
        const lightbox = document.getElementById('lightbox');
        const lightboxImage = document.querySelector('.lightbox-image');
        const lightboxClose = document.querySelector('.lightbox-close');

        // Function to open lightbox
        galleryImages.forEach((img) => {
            img.addEventListener('click', () => {
                lightbox.style.display = 'flex'; // Show the lightbox (flex centers content)
                lightboxImage.src = img.src; // Set the lightbox image to the clicked image
            });
        });

        // Function to close lightbox when clicking close button
        lightboxClose.addEventListener('click', () => {
            lightbox.style.display = 'none'; // Hide the lightbox
        });

        // Close the lightbox when clicking outside the image
        lightbox.addEventListener('click', (event) => {
            if (event.target === lightbox) {
                lightbox.style.display = 'none';
            }
        });
    </script>
    <script>// Select all `.reveal` sections
        const reveals = document.querySelectorAll('.revealsection');

        // Function to handle scroll reveal
        const revealOnScroll = () => {
            const windowHeight = window.innerHeight;

            reveals.forEach((section) => {
                const sectionTop = section.getBoundingClientRect().top;

                // Add 'visible' class when the section is in view
                if (sectionTop < windowHeight - 100) {
                    section.classList.add('visible');
                } else {
                    section.classList.remove('visible'); // Remove when out of view
                }
            });
        };

        // Event listeners for scroll and initial page load
        window.addEventListener('scroll', revealOnScroll);
        window.addEventListener('DOMContentLoaded', revealOnScroll);
    </script>
